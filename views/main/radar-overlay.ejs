<!DOCTYPE html>
<html lang="en">
<head>
    <title>ZQRADAR - Overlay</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/scripts/classes/Settings.js"></script>
    <link rel="icon" type="image/x-icon" href="/zqradar.ico">
    <link rel="stylesheet" href="/scripts/styles/overlay.css">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            background-color: #000000;
            overflow: hidden;
            cursor: default;
            user-select: none;
        }

        #overlayContainer {
            position: relative;
            width: 500px;
            height: 500px;
            background-color: rgba(17, 24, 39, 0.5);
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.4);
        }

        .overlay-canvas {
            position: absolute;
            top: 0;
            left: 0;
        }

        #gridCanvas {
            border: 2px solid rgba(167, 139, 250, 0.4);
            border-radius: 12px;
        }

        #controls {
            position: absolute;
            top: 8px;
            right: 8px;
            z-index: 1000;
            display: flex;
            gap: 8px;
            transition: opacity 0.5s ease;
        }

        .control-btn {
            background-color: rgba(124, 58, 237, 0.85);
            color: white;
            border: 1px solid rgba(167, 139, 250, 0.4);
            padding: 8px 14px;
            cursor: pointer;
            font-size: 13px;
            border-radius: 6px;
            transition: all 0.3s ease;
            font-weight: 600;
            backdrop-filter: blur(5px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
        }

        .control-btn:hover {
            background-color: rgba(139, 92, 246, 0.95);
            border-color: rgba(167, 139, 250, 0.6);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(124, 58, 237, 0.3);
        }

        .control-btn:active {
            transform: translateY(0);
            box-shadow: 0 1px 4px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
<body>
    <div id="overlayContainer">

        <div id="controls">
            <button class="control-btn" id="closeBtn" title="Close">âœ–</button>
        </div>

        <canvas class="overlay-canvas" id="mapCanvas" width="500" height="500"></canvas>
        <canvas class="overlay-canvas" id="gridCanvas" width="500" height="500"></canvas>
        <canvas class="overlay-canvas" id="drawCanvas" width="500" height="500"></canvas>
        <canvas class="overlay-canvas" id="flashCanvas" width="500" height="500"></canvas>
        <canvas class="overlay-canvas" id="ourPlayerCanvas" width="500" height="500"></canvas>
        <canvas class="overlay-canvas" id="thirdCanvas" width="500" height="500"></canvas>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.10/signalr.min.js"></script>
    <script src="/scripts/Handlers/HarvestablesHandler.js"></script>
    <script src="/scripts/Handlers/MobsHandler.js"></script>
    <script src="/scripts/Handlers/ChestsHandler.js"></script>
    <script src="/scripts/Handlers/DungeonsHandler.js"></script>
    <script src="/scripts/Handlers/Map.js"></script>
    <script src="/scripts/Handlers/MobsInfo.js"></script>
    <script src="/scripts/Handlers/ItemsInfo.js"></script>
    <script src="/scripts/Handlers/FactionFlagInfo.js"></script>
    <script src="/scripts/Utils/DrawingUtils.js"></script>
    <script src="/scripts/Utils/DebugConfig.js"></script>

    <script type="module" src="/scripts/Utils/Utils.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Close button
            const closeBtn = document.getElementById('closeBtn');
            if (closeBtn) {
                closeBtn.addEventListener('click', function() {
                    if (confirm('Close overlay mode?')) {
                        window.close();
                    }
                });
            }

            // Auto-hide controls
            let hideControlsTimeout;
            const controls = document.getElementById('controls');
            const dragHandle = document.getElementById('dragHandle');

            function showControls() {
                if (controls) controls.style.opacity = '1';
                if (dragHandle) dragHandle.style.opacity = '1';
                clearTimeout(hideControlsTimeout);
                hideControlsTimeout = setTimeout(() => {
                    if (controls) controls.style.opacity = '0.2';
                    if (dragHandle) dragHandle.style.opacity = '0.2';
                }, 2000);
            }

            document.addEventListener('mousemove', showControls);

            if (controls && dragHandle) {
                [controls, dragHandle].forEach(el => {
                    el.addEventListener('mouseenter', () => {
                        el.style.opacity = '1';
                        clearTimeout(hideControlsTimeout);
                    });
                });
            }

            // Initialize
            showControls();

            // Keyboard shortcuts
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    window.close();
                }
            });

            document.title = 'ZQRADAR Overlay - ESC:Close';
        });
    </script>
</body>
</html>

