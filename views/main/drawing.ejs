<script>
    // Initialize overlay settings
    function returnLocalBool(item) {
        return localStorage.getItem(item) === "true";
    }

    function getLocalValue(item, defaultValue) {
        const value = localStorage.getItem(item);
        return value !== null ? value : defaultValue;
    }

    // Wait for DOM to be fully loaded
    document.addEventListener('DOMContentLoaded', function() {
        // Overlay checkboxes
        const overlayEnchantment = document.getElementById("overlayEnchantment");
        const overlayResourceCount = document.getElementById("overlayResourceCount");
        const overlayDistance = document.getElementById("overlayDistance");
        const overlayCluster = document.getElementById("overlayCluster");
        const overlayClusterRadius = document.getElementById("overlayClusterRadius");
        const overlayClusterMinSize = document.getElementById("overlayClusterMinSize");

        // Load saved settings
        if (overlayEnchantment) overlayEnchantment.checked = returnLocalBool("overlayEnchantment");
        if (overlayResourceCount) overlayResourceCount.checked = returnLocalBool("overlayResourceCount");
        if (overlayDistance) overlayDistance.checked = returnLocalBool("overlayDistance");
        if (overlayCluster) overlayCluster.checked = returnLocalBool("overlayCluster");
        if (overlayClusterRadius) overlayClusterRadius.value = getLocalValue("overlayClusterRadius", "30");
        if (overlayClusterMinSize) overlayClusterMinSize.value = getLocalValue("overlayClusterMinSize", "2");

        // Save on change
        if (overlayEnchantment) {
            overlayEnchantment.addEventListener("click", () => {
                localStorage.setItem("overlayEnchantment", overlayEnchantment.checked);
            });
        }

        if (overlayResourceCount) {
            overlayResourceCount.addEventListener("click", () => {
                localStorage.setItem("overlayResourceCount", overlayResourceCount.checked);
            });
        }

        if (overlayDistance) {
            overlayDistance.addEventListener("click", () => {
                localStorage.setItem("overlayDistance", overlayDistance.checked);
            });
        }

        if (overlayCluster) {
            overlayCluster.addEventListener("click", () => {
                localStorage.setItem("overlayCluster", overlayCluster.checked);
            });
        }

        if (overlayClusterRadius) {
            overlayClusterRadius.addEventListener("input", () => {
                localStorage.setItem("overlayClusterRadius", overlayClusterRadius.value);
            });
        }

        if (overlayClusterMinSize) {
            overlayClusterMinSize.addEventListener("input", () => {
                localStorage.setItem("overlayClusterMinSize", overlayClusterMinSize.value);
            });
        }
    });
</script>

