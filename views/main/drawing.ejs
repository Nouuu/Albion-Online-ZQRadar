        #openOverlay
        {
            position: absolute;
            top: 210px;
            left: 520px;
            background-color: #059669; /* Green background */
        }

        #openOverlay:hover
        {
            background-color: #047857; /* Darker green on hover */
        }

        #canvasContainer {
            position: relative;
        }

        #thirdCanvas {
   
            position: absolute;
            top: 520px;
     
            margin: 10px;
            bottom: 0;
            left: 0;
            border: 2px solid grey;
        }
    </style>
</head>
<body>
    <div id="canvasContainer">
